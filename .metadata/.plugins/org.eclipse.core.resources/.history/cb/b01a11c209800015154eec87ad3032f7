from tkinter import *

def hello():
    print "hello!"
    
root = Tk()

# Create top level menu:
menubar = Menu(root)
menubar.add_command(label="File",command=hello)
menubar.add_command(label="Quit!",command=root.quit())


# Attempt 1 at a menu...  Not used.
class GuiMainMenu(Frame):
    def __init__(self,Parent):
        Frame.__init__(self,Parent)
        self.parent = Parent
        self.GuiInit()
    
    def GuiInit(self):
        self.parent.title("Catalog Staging Program")
        menu_options = Menu(self.parent)
        self.parent.config(menu=menu_options)
        #self.parent.config(menu=menu_help)
        menu_options.add_cascade(label="File", menu=demo_file)
        menu_options.add_cascade(label="Help", menu=demo_file)
        
        
        #menu_bar.add_cascade(label="Help", menu=demo_menu2)
        
        #Populate menu choices:
        def onExit(): self.quit()
        demo_file.add_command(label="Exit", command=onExit)

def main_function():
    root = Tk()
    root.geometry("450x250+600+400")  # sets size for window + positions it on screen
    # width, height of window, x screen coordinate, y coordinate
    app = GuiMainMenu(root)
    root.mainloop()


